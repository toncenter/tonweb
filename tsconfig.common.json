{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  }
}
